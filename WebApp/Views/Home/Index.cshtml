@model IEnumerable<Entities.DTOs.ProductDetailDto>
@{
    ViewData["Title"] = "Home Page";
}
<div class="justify-content-center">
    <div class="col-md-6">
        <table class="table">
            <thead>
            <th>Product Name</th>
            <th>Brand</th>
            <th></th>
            </thead>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.BrandName</td>
                    <td><button type="button" onclick="location.href = '@Url.Action("GetReports","Home", new { ID = product.BrandId })'" class="btn btn-sm btn-primary">Profits</button></td>
                </tr>
            }
        </table>
    </div>
</div>